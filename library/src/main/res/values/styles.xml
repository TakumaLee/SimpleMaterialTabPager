<resources>

    <!-- Base application theme. -->
    <style name="MaterialTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_window</item>
        <!-- ...and here we setting appcompatâ€™s color theming attrs -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/greenDark</item>
        <item name="colorAccent">@color/banana</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="ToolBarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="MaterialPagerTheme" parent="MaterialTheme">
        <item name="android:actionBarStyle">@style/ToolBarTheme</item>
    </style>
</resources>
