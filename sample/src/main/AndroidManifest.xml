<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.takumalee.simplematerialpager.example" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.TabTextActivity"
            android:label="@string/title_activity_tab_text" >
        </activity>
        <activity
            android:name=".activity.TabNoActionBarActivity"
            android:label="@string/title_activity_tab_no_action_bar" >
        </activity>
        <activity
            android:name=".activity.CustomTabActivity"
            android:label="@string/title_activity_custom_tab" >
        </activity>
        <activity
            android:name=".activity.IconSampleActivity"
            android:label="@string/title_activity_icon_sample" >
        </activity>
    </application>

</manifest>
